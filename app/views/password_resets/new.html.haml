- provide(:title, 'Password Reset')

.row
  .col-md-4.col-md-offset-4
    .page-header
      %h1 Password Reset

    = form_tag password_resets_path do |f|
      =# render 'shared/error_messages', object: f.object

      .form-group
        = text_field_tag :email, nil,  class: 'form-control', placeholder: 'Email'

      .actions
        = submit_tag 'Submit', class: 'btn btn-default btn-block'
