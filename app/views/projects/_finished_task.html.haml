%tr{id: "finished-task-#{finished_task.id}"}
  %td= finished_task.title
  %td= finished_task.description
  %td= finished_task.updated_at.strftime('%e %B %Y')
  - if is_the_owner?(@project)
    %td
      = link_to cancel_project_task_path(@project, finished_task), method: :put,
        remote: true do
        %span.glyphicon.glyphicon-minus
      &nbsp;
      = link_to project_task_path(@project, finished_task),
        method: :delete, data: { confirm: 'Are you sure?' } do
        %span.glyphicon.glyphicon-remove
      &nbsp;
      = link_to edit_project_task_path(@project, finished_task), remote: true do
        %span.glyphicon.glyphicon-edit
  - else
    %td
      %span.glyphicon.glyphicon-minus
