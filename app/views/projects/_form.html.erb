<%= form_for(@project) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class='form-group'>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :due_date, 'Due Date' %>
    <%= f.text_field :due_date, class: 'form-control', id: 'due_date_project' %>
  </div>
  <div class='actions'>
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', '#', class: 'btn btn-primary', id: 'cancel-project' %>
  </div>
<% end %>

<script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
    $('#cancel-project').click(function() {
      $('#project-form').slideUp(350);
      $('#new-project').delay(500).slideDown(102);
    });
  });

  $('#due_date_project').datepicker({
    format: "yyyy-mm-dd"
  });
</script>
